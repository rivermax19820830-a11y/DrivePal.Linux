@code {



	private GeneralVFDMechanism generalMechanism = InitialMechanism();

	private DriveTypeSelection? selectedDriveType = DriveTypeSelection.SingleDrive;

	private List<RecommendedInverterDto> recommendedInverters = new List<RecommendedInverterDto>();
	private bool hasSearched = false;


	private async Task CalculateAndRecommend()
	{
		hasSearched = false;
		recommendedInverters.Clear();
		StateHasChanged();


		// 验证必填参数
		if (generalMechanism.MotorPower <= 0 || generalMechanism.MotorRatedCurrent <= 0 ||
		generalMechanism.OverloadFactor <= 0 || generalMechanism.VoltageLevel == null ||
		generalMechanism.HeatDissipation == null || selectedDriveType == null)
		{
			// 参数不完整，不执行搜索
			return;
		}


		// 如果一个变频器驱动多台电动机, 将DriveMode改为对应的模式
		if (generalMechanism.ProductType == DriveTypeSelection.SingleDrive && generalMechanism.MotorCount > 1)
		{
			generalMechanism.DriveMode = DriveMode.OneInverterMultipleMotors;
		}

		generalMechanism.PerformCalculation(GetStrategy());
		var criteria = generalMechanism.ToDeviceSearchCriteria() as MotorFilterCriteria;
		criteria!.ProductType = selectedDriveType;

		recommendedInverters = await deviceService.QueryGeneralPurposeDevices(criteria);


		hasSearched = true;
		StateHasChanged();
	}


	private void ResetForm()
	{
		generalMechanism = InitialMechanism();

		selectedDriveType = DriveTypeSelection.SingleDrive;
		recommendedInverters = new List<RecommendedInverterDto>();
		hasSearched = false;
	}

	static GeneralVFDMechanism InitialMechanism()
	{
		return new GeneralVFDMechanism
		{
			MotorCount = 1,
			MotorPower = 250,
			MotorRatedCurrent = 200,
			OverloadFactor = 1.5m,
			VoltageLevel = VoltageLevel.V380,
			Altitude = 1000,
			HeatDissipation = HeatDissipationType.AirCooled,
			GearFactor = 0m,
			Motor = new MotorParameters { RatedVoltage = 400, RatedFrequency = 50, OperatingFrequency = 50, PowerFactor = 0.85M },
			CalculationHistory = new List<SelectionProcessDto>()
		};

	}


	private IMechanismCalculationStrategy GetStrategy()
	{
		return ServiceProvider.GetRequiredKeyedService<IMechanismCalculationStrategy>("common");
	}
}
