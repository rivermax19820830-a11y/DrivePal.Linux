                <div class="mb-3">
                    <label class="form-label">电机数量</label>
                    <input type="number" class="form-control form-control-lg" TValue="int" @bind="@generalMechanism.MotorCount" min="1" max="99" step="1" />
                </div>
            </div> *@

				<div class="col-md-4">
					<div class="mb-3">
						<label class="form-label">电压过载系数 <span class="text-danger">*</span></label>
						<InputNumber @bind-Value="generalMechanism.OverloadFactor" class="form-control form-control-lg" min="1.2" max="2.5" step="0.1" Placeholder="变频器短时过载能力，一般为1.5~2.0倍额定电流" />
					</div>
				</div>
			</div>

			<div class="row g-4 mb-4">

				<div class="col-md-4">
					<div class="mb-3">
						<label class="form-label">电压等级 <span class="text-danger">*</span></label>
						<select @bind="generalMechanism.VoltageLevel" class="form-control form-control-lg">
							<option value="@(VoltageLevel.V380)">400V</option>
							<option value="@(VoltageLevel.V500)">500V</option>
							<option value="@(VoltageLevel.V690)">690V</option>
						</select>
					</div>
				</div>

				<div class="col-md-4">
					<div class="mb-3">
						<label class="form-label">散热方式 <span class="text-danger">*</span></label>
						<select @bind="generalMechanism.HeatDissipation" class="form-control form-control-lg">
							<option value="@(HeatDissipationType.AirCooled)">风冷</option>
							<option value="@(HeatDissipationType.WaterCooled)">水冷</option>
						</select>
					</div>
				</div>

				<div class="col-md-4">
					<div class="mb-3">
						<label class="form-label">产品类型 <span class="text-danger">*</span></label>
						<select @bind="selectedDriveType" class="form-control form-control-lg">
							<option value="@(DriveTypeSelection.SingleDrive)">单传</option>
							<option value="@(DriveTypeSelection.MultiDriveSystem)">多传</option>
						</select>
					</div>
				</div>

			</div>

			<div class="row g-4 mb-4">
				<div class="col-md-4">
					<div class="mb-3">
						<label class="form-label">海拔高度 (m) <span class="text-danger">*</span></label>
						<InputNumber @bind-Value="generalMechanism.Altitude" class="form-control form-control-lg" min="0" step="100" />
					</div>
				</div>
				@* 【替换 3：变频器放档系数】 *@
				<div class="col-md-4">
					<div class="mb-3">
						<label class="form-label">变频器放档系数 <span class="text-danger">*</span></label>
						<select @bind="generalMechanism.GearFactor" class="form-control form-control-lg">
							<option value="0">平档</option>
							<option value="1">1档</option>
							<option value="2">2档</option>
							<option value="3">3档</option>
						</select>
					</div>
				</div>
			</div>

			<div class="mt-4">
				<button class="btn btn-primary" @onclick="CalculateAndRecommend">
					<i class="fas fa-search"></i>
					查找匹配型号
				</button>
				<button class="btn btn-outline-secondary ml-6" @onclick="ResetForm">
					重置
				</button>
			</div>
		</div>
	</div>
	<!-- 匹配结果区域 -->
